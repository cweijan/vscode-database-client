// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "webpack-dev",
            "type": "npm",
            "script": "dev",
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": {
                            "regexp": "webpack is watching the files"
                        },
                        "endsPattern": {
                            "regexp": "Entrypoint HtmlWebpackPlugin_0"
                        }
                    }
                }
            ]
        }
    ]
}